    <!-- Form Section -->
    <section>
        <h2>Registration Form</h2>
        <form action="/submit" method="post" autocomplete="on">
            <!-- Text Fields -->
            <label for="name">Full Name:</label>
            <input type="text" id="name" name="fullname" placeholder="Enter your full name" required><br><br>

            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" placeholder="you@example.com" required><br><br>

            <label for="password">Create Password:</label>
            <input type="password" id="password" name="password" placeholder="Minimum 8 characters" required minlength="8"><br><br>

            <label for="dob">Date of Birth:</label>
            <input type="date" id="dob" name="dob" required><br><br>

            <!-- Number -->
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" min="18" max="99" required><br><br>

            <!-- Radio -->
            <fieldset>
                <legend>Gender:</legend>
                <label><input type="radio" name="gender" value="male" required> Male</label>
                <label><input type="radio" name="gender" value="female"> Female</label>
                <label><input type="radio" name="gender" value="other"> Other</label>
            </fieldset><br>

            <!-- Checkbox -->
            <fieldset>
                <legend>Skills:</legend>
                <label><input type="checkbox" name="skills" value="html"> HTML</label>
                <label><input type="checkbox" name="skills" value="css"> CSS</label>
                <label><input type="checkbox" name="skills" value="js"> JavaScript</label>
            </fieldset><br>

            <!-- Dropdown -->
            <label for="service">Choose a Service:</label>
            <select id="service" name="service" required>
                <option value="">--Select--</option>
                <option value="web">Web Development</option>
                <option value="design">Graphic Design</option>
            </select><br><br>

            <!-- Readonly Field -->
            <label for="id">User ID:</label>
            <input type="text" id="id" name="userid" value="USR-001" readonly><br><br>

            <!-- Textarea -->
            <label for="message">Additional Comments:</label><br>
            <textarea id="message" name="comments" rows="4" cols="50" placeholder="Your message here..."></textarea><br><br>

            <!-- File Upload -->
            <label for="resume">Upload Resume:</label>
            <input type="file" id="resume" name="resume" accept=".pdf,.docx"><br><br>

            <!-- Submit -->
            <button type="submit">Submit</button>
            <button type="reset">Reset</button>
        </form>
    </section>
